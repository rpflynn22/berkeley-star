doctype html
html
  head
    title Berkeley's Star
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
    script(src='/bootstrap/js/bootstrap.min.js')
    link(href='bootstrap/css/bootstrap.min.css', rel='stylesheet')
    link(href='stylesheets/carousel.css', rel='stylesheet')
    script(src='javascripts/berk-star.js')
  body
    .navbar-wrapper
      .container
        .navbar.navbar-default.navbar-fixed-top(role='navigation')
          .container
            .navbar-header
              button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
              a.navbar-brand(href='/') Berkeley's Star
            .navbar-collapse.collapse
              ul.nav.navbar-nav
                li#home-nav.active
                  a(href='/') Home
                li#sponsors-nav
                  a(href='/sponsors') Our Sponsors
                li#staff-nav
                  a(href='/staff') Our Staff
                li#audition-nav
                  a(href='/audition') AUDITION
                li#fund-me
                  a(href='#', data-toggle='modal', data-target='#myModal') DONATE NOW
                li#tickets-nav
                  a(href='#', data-toggle='modal', data-target='#myModal') TICKETS
              ul.nav.navbar-nav.navbar-right
                li
                  a.social-link(href='https://www.facebook.com/events/847080952055026/', target='_blank')
                    img.img-rounded.social-icon(src='/images/facebook-icon.png')
    .modal.fade#myModal(role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
      .modal-dialog
        .modal-content
          .modal-header
            button(type='button', class='close', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') &times;
            h4.modal-title More Info Coming Soon!
          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Close

    block content

    br
    .container
      hr
      br
      footer
        p
          | Contact Us
          br
          | berkeleystarofficial@gmail.com
          br
          | Berkeley's Star
          br
          | 2424 Warring St.
          br
          | Berkeley, CA 94704
        p.pull-right
          a(href='#') Back to top